    <style>
        .body .nav .div{
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }

        .container1 {
            width: 460px;
            height: 350px;
        }

        .container-section {
            padding: 30px;
        }

        .card {
            width: 500px;
            height: 650px;
        }

        .section {
            width:100%;
            height: 100px;
            text-align: center;
        }

        .margin-btn-mim {
            margin-right: 10px;
            margin-left: 10px;
        }

        .active-mim {
            margin-top:20px;
            color: #fff;
            background-color: orangered;
